 #version 1
print("Hola Mundo")

 #version 2
def saludar():
    print("Hola Mundo")

saludar()

 #version 3
def saludar(nombre):
    print(f"Hola {nombre}")

saludar("Mundo")

 #version 4
def saludar(nombre):
    print(f"Hola {nombre}")

nombre = input("Introduce tu nombre: ")
saludar(nombre)

 #version 5
def saludar(nombre):
    if not nombre:
        print("Nombre no puede estar vacío.")
    else:
        print(f"Hola {nombre}")

try:
    nombre = input("Introduce tu nombre: ")
    saludar(nombre)
except Exception as e:
    print(f"Ocurrió un error: {e}")
